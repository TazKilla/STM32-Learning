#include <stdint.h>

#include "gpio_ports.h"

int main(void)
{
	uint64_t tics_cntr = 0;
	uint64_t toggle_cntr = 0;
	int led_state = 0;
	int frequency = 50000;
	int freq_evolution = 1;
	const int LEDPIN = 13;

	activatePort(&GPIOPortB);
	selectPinFunction(&GPIOPortB, LEDPIN, 1);
	setPin(&GPIOPortB, LEDPIN);
	led_state = 1;

    /* Loop forever */
	for(;;)
	{
		if(tics_cntr - toggle_cntr >= frequency)
		{
			if(led_state == 1)
			{
				//*GPIOPortB.pPortOutDataReg &= ~(1 << 13);
				clearPin(&GPIOPortB, LEDPIN);
				led_state = 0;
			} else {
				//*GPIOPortB.pPortOutDataReg |= 1 << 13;
				setPin(&GPIOPortB, LEDPIN);
				led_state = 1;
			}
			toggle_cntr = tics_cntr;
			if(frequency >= 100000)
			{
				freq_evolution = 0;
			} else if(frequency <= 10000)
			{
				freq_evolution = 1;
			}
		}
		tics_cntr++;
	}
}
