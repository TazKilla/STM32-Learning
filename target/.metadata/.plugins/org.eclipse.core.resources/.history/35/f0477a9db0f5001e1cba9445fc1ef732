#include <stdint.h>
#include <../../STM32F30xx/gpio_ports.h>

int main(void)
{
	uint64_t tics_cntr = 0;
	uint64_t toggle_cntr = 0;
	int led_state = 0;

	*GPIOPortB.pRCCReg |= 1 << 18;
	*GPIOPortB.pPortModeReg &= ~(3 << 26);
	*GPIOPortB.pPortModeReg |= 1 << 26;
	*GPIOPortB.pPortOutDataReg |= 1 << 13;
	led_state = 1;

    /* Loop forever */
	for(;;)
	{
		if(tics_cntr - toggle_cntr >= 50000)
		{
			if(led_state == 1)
			{
				//*GPIOPortB.pPortOutDataReg &= ~(1 << 13);
				clearPin(&GPIOPortB, 13);
				led_state = 0;
			} else {
				//*GPIOPortB.pPortOutDataReg |= 1 << 13;
				setPin(&GPIOPortB, 13);
				led_state = 1;
			}
			toggle_cntr = tics_cntr;
		}
		tics_cntr++;
	}
}
